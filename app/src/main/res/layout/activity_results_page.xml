<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/red"
    tools:context="ishpal.hungrystillmustwait.ResultsPage">

    <Button
        android:id="@+id/updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/currentTime"
        android:layout_toStartOf="@+id/currentTime"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Current Waiting Time(mins):"
        android:textColor="#FFFF00"
        android:layout_alignBaseline="@+id/currentTime"
        android:layout_alignBottom="@+id/currentTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/currentTime"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />


    <TextView
        android:id="@+id/ave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average waiting time (mins): "
        android:textColor="#FFFF00"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/aTime"
        android:textColor="#FFFFFF"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ave"
        android:layout_toRightOf="@+id/ave"
        android:layout_toEndOf="@+id/ave" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current waiting time (mins): "
        android:textColor="#FFFF00"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/txtUsers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cTime"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ave"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


    <TextView
        android:id="@+id/txtUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of user updates:"
        android:textColor="#FFFF00"
        android:layout_above="@+id/updateTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="168dp" />

    <TextView
        android:id="@+id/usrs"
        android:layout_width="40dp"
        android:textColor="#FFFFFF"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txtUsers"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="HungryStillMustWait"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#FFFF00"
        android:textSize="28sp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/address"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address:"
        android:textColor="#FFFF00"
        android:id="@+id/textView6"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/usrs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Restaurant name:"
        android:textColor="#FFFF00"
        android:id="@+id/textView7"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:id="@+id/name"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/updateTime"
        android:layout_alignStart="@+id/updateTime" />

</RelativeLayout>
